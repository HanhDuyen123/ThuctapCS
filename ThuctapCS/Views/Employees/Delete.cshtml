@model ThuctapCS.Models.Employee

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 class="text-danger">XÁC NHẬN XÓA NHÂN VIÊN</h2>

<div class="alert alert-warning" role="alert">
    <strong>Chú ý:</strong> Bạn có chắc chắn muốn xóa nhân viên này không?
</div>
<div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger">Xóa</button>
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
<style>
    .text-danger {
        color: #c9302c;
    }

    .alert {
        margin-bottom: 20px;
        padding: 15px;
        background-color: #fcf8e3;
        border-color: #faebcc;
        border-radius: 4px;
    }

    .form-actions {
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #d9534f;
        color: white;
    }

    .btn-secondary {
        margin-left: 10px;
    }
</style>
