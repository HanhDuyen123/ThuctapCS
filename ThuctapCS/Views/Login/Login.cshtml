
@{
    ViewBag.Title = "Login";
    Layout = null;
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <!-- Link thư viện Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #141313;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            display: flex;
            flex-direction: row;
            max-width: 900px;
            width: 100%;
        }

        .login-image {
            flex: 1;
            background: url('https://mega.com.vn/media/news/0106_hinh-nen-4k-may-tinh6.jpg') no-repeat center center;
            background-size: cover;
        }

        @@media (max-width: 768px) {
            .login-image {
                display: none;
            }
        }

        .login-form {
            flex: 1;
            padding: 40px;
            text-align: center;
        }

            .login-form h2 {
                margin-bottom: 20px;
                color: #333;
            }

        .btn-google {
            background-color: #dd4b39;
            color: white;
            border: none;
        }

        .btn-facebook {
            background-color: #3b5998;
            color: white;
            border: none;
        }

            .btn-google:hover, .btn-facebook:hover {
                opacity: 0.9;
            }

        .text-links a {
            text-decoration: none;
            color: #4279f4;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Cột chứa hình ảnh (ẩn trên thiết bị di động) -->
        <div class="login-image"></div>

        <!-- Cột chứa form đăng nhập -->
        <div class="login-form">
            <h2>Xin chào!</h2>
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "text-start" }))
            {
                @Html.AntiForgeryToken()
                <!-- Tên đăng nhập -->
                <div class="form-floating mb-3">
                    @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "Email", required = "required" })
                    <label for="Email">Email</label>
                </div>
                <!-- Mật khẩu -->
                <div class="form-floating mb-3">
                    @Html.Password("Password", null, new { @class = "form-control", placeholder = "Mật khẩu", required = "required" })
                    <label for="Password">Mật khẩu</label>
                </div>

                <!-- Ghi nhớ -->
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe">
                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                </div>

                <!-- Nút đăng nhập -->
                <button type="submit" class="btn btn-primary w-100 mb-3">Đăng nhập</button>

                <!-- Đăng nhập với Google -->
                <!--<button type="button" class="btn btn-google w-100 mb-3">
                    <i class="bi bi-google me-2"></i> Đăng nhập với Google
                </button>-->

                <!-- Đăng nhập với Facebook -->
                <!--<button type="button" class="btn btn-facebook w-100">
                    <i class="bi bi-facebook me-2"></i> Đăng nhập với Facebook
                </button>-->
            }

            <!-- Liên kết  Tạo tài khoản -->
            @*<div class="text-links mt-4">
                    Bạn chưa có tài khoản?  <a href="/Account_64130473/Register">Tạo tài khoản</a>
                </div>*@

            @*<div class="mt-2">
                        <a href="/Account_64130473/Login" class="text-secondary">Đăng nhập trang khách hàng</a>
                </div>*@
        </div>
    </div>

    <!-- Link thư viện Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <!-- Link thư viện JavaScript của Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



